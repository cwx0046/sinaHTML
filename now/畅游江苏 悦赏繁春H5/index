<script type="text/javascript">
/* 页面功能切换 */
function show_index(){
	$("#details,#signup").hide();
	$("#index").show();
}
function show_details(){
	$("#index,#signup").hide();
	$("#details").show();
}
function show_signup(){
	$("#details,#index").hide();
	$("#signup").show();
	tools.BindFileBeautify();
}
function go_details(_this)
{
	var self = _this;
	show_details();
	$(".vote-num").html(Number(self.find("span.fr").html()));//得票
	$(".ranke-num").html(Number(self.find("span.w-ranke").html()));//排名
	$(".work-num").html(Number(self.find("span.fl").html()));//作品编号
	$(".work-name").html(self.find(".w-name").html());	//作者 
	$(".work-pic").attr("src",self.find("img").attr("src")); //作品图片
}

$(function(){
	get_top_lists( page_num, function(){get_usework_by_ids(lists_page_by_vote)});
});

$(function search_btn_event() {
	$(".s-search-btn").click(function() {
		var text = $(".s-search input").val().trim();
		if (text == "") {
			return;
		}
		
		if (text.length>=14) {
			alert("关键词过长");
			return;
		}
		
		// 作品编号
		if (/^[0-9]+$/.test(text)) {
			var index = -1;
			text = parseInt(text) + 2800000;
			for ( var i in lists_by_vote) {
				if (text == lists_by_vote[i][0]) {
					index = i+1;
				}
			}
			if (index == -1) {
				alert("抱歉没有找到这个编号的作品");
				return;
			}else{
				// 当前排名 index
				
				$.JSONP('http://act.city.sina.com.cn/interface/activity/json_get_one_user_work.php',{work_id:text},function(json){
					if(json.error == 0){
						var data = json.data;
						
						var id = json.data.id;
						
						var vote_num = -1;
						var index = -1;
						for ( var i in lists_by_vote) {
							if (id == lists_by_vote[i][0]) {
								vote_num = lists_by_vote[i][1];
								index = parseInt(i)+1;
							}
						}
						
						$(".vote-num").html(vote_num);//得票
						$(".ranke-num").html(index);//排名
						$(".work-num").html(parseInt(id)-2800000);//作品编号
						$(".work-name").html(data.form_data.custom_1.value);	//作者 
						$(".work-pic").attr("src",data.form_data.custom_6.value); //作品图片
						show_details();
						
			        }else{
			            alert(json.errmsg);
			        }
				});
			}
		} else {
			// 用户名
			$.JSONP('http://act.city.sina.com.cn/interface/activity/json_get_field_data.php',{act_id:10761, custom_1:text},function(json){
				if(json.error == 0){
					if (json.count == 0) {
						alert("抱歉没有找到这个用户的作品");
						return;
					}
					
					var data = json.data;
					var id = data[0].id;
					var vote_num = -1;
					var index = -1;
					for ( var i in lists_by_vote) {
						if (id == lists_by_vote[i][0]) {
							vote_num = lists_by_vote[i][1];
							index = parseInt(i)+1;
						}
					}
					
					$(".vote-num").html(vote_num);//得票
					$(".ranke-num").html(index);//排名
					$(".work-num").html(parseInt(id)-2800000);//作品编号
					$(".work-name").html(data[0].form_data.custom_1.value);	//作者 
					$(".work-pic").attr("src",data[0].form_data.custom_6.value); //作品图片
					show_details();
					
		        }else{
		            alert(json.errmsg);
		        }
				
			});
		}
		
	});
});
</script>
</body> 
</html>